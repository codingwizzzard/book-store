<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Store | Edit Table</title>
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <!-- fontawesome cdn -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

    <style>
        * {
            font-family: "Poppins", sans-serif;
        }
        th,td{
            vertical-align: middle;
        }
    </style>
</head>

<body>
    <!-- Header starts -->
    <%- include('./partials/header.ejs') %>
        <!-- Header ends -->
        <main>
            <caption>
                <h1 class="text-center my-5">Edit Book List</h1>
            </caption>
            <table border="1" class="table text-center">
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Published Year</th>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
                <% data.map(val=> { %>
                    <tr>
                        <td>
                            <%= val.title %>
                        </td>
                        <td>
                            <%= val.author %>
                        </td>
                        <td>
                            <%= val.publishyear %>
                        </td>
                        <td><img src="<%= val.image %>" alt="image" width="100px"></td>
                        <td>
                            <a href="/deleteBook/<%= val._id %>" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                            <a href="/editBook/<%= val._id %>" class="btn btn-primary"><i class="fa-regular fa-pen-to-square"></i></a>
                        </td>
                    </tr>
                    <% }) %>
            </table>
        </main>
</body>

</html>